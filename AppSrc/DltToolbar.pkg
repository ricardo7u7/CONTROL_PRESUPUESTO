    Object oPaste is a cToolbarButton
        Set psLabel to "Pegar"
        Set psTooltip to 'Pegar (Ctrl+V)'
        Set psStatusHelp To 'Inserts Clipboard contents (Ctrl+V)'
        Set piImage To 12
        Procedure OnClick
            Send DoSendToDeoFocus msg_paste
        End_Procedure
    End_Object

End_Object // oMainToolbar

