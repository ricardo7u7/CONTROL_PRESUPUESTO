Use cToolbar.pkg

// A toolbar for the Contacts sample.
// shows:
//    Buttons with text underneath (toolbar's pbShowLabels property set to True, and each button's psLabel property to the text)
//    Multiline tooltips (embed "\n" in the psTooltip property to force a newline)
//    "Hot" images, using a second imagelist (set the phoImageListHot property)

Object oToolBar is a cToolBar
    Set pbShowLabels To True // display the psLabel property on th button
    Object oImages is a cImageList
        Set piMaxImages To 12
        Procedure OnCreate
            Integer iVoid
            Get AddTransparentImage "bgn.bmp"      clLtGray  To iVoid // 0
            Get AddTransparentImage "prev.bmp"     clLtGray  To iVoid // 1
            Get AddTransparentImage "equal.bmp"    clLtGray  To iVoid // 2
            Get AddTransparentImage "next.bmp"     clLtGray  To iVoid // 3
            Get AddTransparentImage "end.bmp"      clLtGray  To iVoid // 4
            Get AddTransparentImage "Prompt16.bmp" clFuchsia To iVoid // 5
            Get AddTransparentImage "clr.bmp"      clLtGray  To iVoid // 6
            Get AddTransparentImage "clra.bmp"     clLtGray  To iVoid // 7
            Get AddTransparentImage "Save16.bmp"   clFuchsia To iVoid // 8
            Get AddTransparentImage "Delete16.bmp" clFuchsia To iVoid // 9
            Get AddTransparentImage "Cut16.bmp"    clFuchsia To iVoid // 10
            Get AddTransparentImage "Copy16.bmp"   clFuchsia To iVoid // 11
            Get AddTransparentImage "Paste16.bmp"  clFuchsia To iVoid // 12
        End_Procedure
    End_Object
    
    Object oImagesHot is a cImageList
        // These images are shown when the mouse cursor hovers over the button
        // There must be a matching number of images in all imagelists.
        Set piMaxImages To 12
        Procedure OnCreate
            Integer iVoid
            Get AddTransparentImage "BgnHot.bmp"   clLtGray  To iVoid // 0
            Get AddTransparentImage "PrevHot.bmp"  clLtGray  To iVoid // 1
            Get AddTransparentImage "EqualHot.bmp" clLtGray  To iVoid // 2
            Get AddTransparentImage "NextHot.bmp"  clLtGray  To iVoid // 3
            Get AddTransparentImage "EndHot.bmp"   clLtGray  To iVoid // 4
            Get AddTransparentImage "Prompt16.bmp" clFuchsia To iVoid // 5
            Get AddTransparentImage "clr.bmp"      clLtGray  To iVoid // 6
            Get AddTransparentImage "clra.bmp"     clLtGray  To iVoid // 7
            Get AddTransparentImage "Save16.bmp"   clFuchsia To iVoid // 8
            Get AddTransparentImage "Delete16.bmp" clFuchsia To iVoid // 9
            Get AddTransparentImage "Cut16.bmp"    clFuchsia To iVoid // 10
            Get AddTransparentImage "Copy16.bmp"   clFuchsia To iVoid // 11
            Get AddTransparentImage "Paste16.bmp"  clFuchsia To iVoid // 12
        End_Procedure
    End_Object

    Set phoImageList    To (oImages(self))
    Set phoImageListHot To (oImagesHot(self))
    
    Object oFirst is a cToolbarButton
        Set psLabel to "Primero"
        Set psTooltip to 'Encontrar Primero (Ctrl+Home)'
        Set psStatusHelp To 'Find the First record (Ctrl+Home)'
        Set piImage To 0
        Procedure OnClick
            Send DoSendToDeoFocus msg_Find_First
        End_Procedure
    End_Object

    Object oPrevious is a cToolbarButton
        Set psLabel to "Anterior"
        Set psTooltip to 'Encontrar Anterior (F7)'
        Set psStatusHelp To 'Find the Previous record (F7)'
        Set piImage To 1
        Procedure OnClick
            Send DoSendToDeoFocus msg_find_previous
        End_Procedure
    End_Object

    Object oGreaterEqual is a cToolbarButton
        Set psLabel to "Igual"
